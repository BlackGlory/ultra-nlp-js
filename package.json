{
  "name": "ultra-nlp-js",
  "version": "0.4.10",
  "description": "A Node.js binding for ultra-nlp",
  "keywords": [
    "rust",
    "native"
  ],
  "files": [
    "lib",
    "src",
    "native/src",
    "native/Cargo.lock",
    "native/Cargo.toml"
  ],
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:BlackGlory/ultra-nlp-js.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "install": "neon build --release && rimraf native/target",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "vitest --run",
    "prepublishOnly": "run-s prepare clean build",
    "clean": "run-p clean:*",
    "clean:rs": "neon clean",
    "clean:ts": "rimraf lib",
    "build": "run-p build:*",
    "build:rs": "neon build --release",
    "build:ts": "tsc --project tsconfig.build.json --target es2018",
    "bench": "run-s bench:*",
    "bench:substring-by-bytes": "tsx benches/substring-by-bytes.ts",
    "bench:segment": "tsx benches/segment.ts",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prepare lint build test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/go": "^1.1.3",
    "@commitlint/cli": "^19.0.1",
    "@commitlint/config-conventional": "^19.0.0",
    "@node-rs/jieba": "^1.9.2",
    "@types/node": "18",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "extra-benchmark": "^0.2.3",
    "extra-filesystem": "^0.5.1",
    "husky": "4",
    "iterable-operator": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "pretty-bytes": "6.1.1",
    "return-style": "^3.0.1",
    "standard-version": "^9.5.0",
    "ts-patch": "^3.1.2",
    "tslib": "^2.6.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "typescript-transform-paths": "^3.4.7",
    "vite": "^5.1.4",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@blackglory/prelude": "^0.3.4",
    "extra-lazy": "^2.0.2",
    "justypes": "^4.2.1",
    "neon-cli": "^0.10.1",
    "rimraf": "^5.0.5"
  }
}
